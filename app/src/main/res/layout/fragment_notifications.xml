<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="256dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-2dp">

        <TextView
            android:id="@+id/username"

            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:text="Christine_Perera"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="75dp"
            android:layout_height="73dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/girl_lollypop"
            android:layout_below="@id/username"/>


        <TextView
            android:id="@+id/postCount"
            android:layout_width="55dp"
            android:layout_height="78dp"
            android:layout_below="@id/username"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/profileImage"
            android:text="112 Posts"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/followersCount"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:layout_below="@id/username"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/postCount"
            android:gravity="center"
            android:text="1500 Followers"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/followingCount"
            android:layout_width="101dp"
            android:layout_height="85dp"
            android:layout_below="@id/username"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/followersCount"
            android:gravity="center"
            android:text="450 Followers"
            android:textColor="@color/black"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/userAbout"

            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:text="Future Software DeveloperðŸ˜Ž"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@id/profileImage"/>

        <Button
            android:id="@+id/EditProfileButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/userAbout"
            android:layout_marginTop="20dp"
            android:background="@color/bright_yellow"
            android:layout_marginStart="100dp"
            android:text="Edit Profile" />


    </RelativeLayout>

    <TextView
        android:id="@+id/text_notifications"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>